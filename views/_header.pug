header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
    .header__logo
      img(src='/img/logo-white.png', alt='Natours logo')
  nav.nav.nav--user
    if user 
      a.nav__el.nav_el--logout Log out 
      a.nav__el(href='#')
        img(src='img/user.png', alt='User Photo')
        span= user.name 
    else 
      a.nav__el.nav__el--login(href='/login') Login 
      a.nav__el.nav__el--cta(href='/signup') Sign Up
